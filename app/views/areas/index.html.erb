<h1>Listing areas</h1>

<table>
  <thead>
    <tr>
      <th>Trip</th>
      <th>Name</th>
      <th>Description</th>
      <th>Cost</th>
      <th>Image</th>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @areas.each do |area| %>
      <tr>
        <td><%= area.trip %></td>
        <td><%= area.name %></td>
        <td><%= area.description %></td>
        <td><%= area.cost %></td>
        <td><%= area.image %></td>
        <td><%= area.link %></td>
        <td><%= link_to 'Show', trip_area_path(@trip, area) %></td>
        <td><%= link_to 'Edit', edit_trip_area_path(@trip, area) %></td>
        <td><%= link_to 'Destroy', [@trip, area], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Day', new_trip_area_path(@trip) %>
