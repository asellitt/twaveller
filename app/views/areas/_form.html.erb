<%= form_for([@trip, @area], html: { class: 'form-horizontal' } ) do |f| %>
  <% if @area.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@area.errors.count, "error") %> prohibited this area from being saved:</h2>

      <ul>
      <% @area.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group field">
    <%= f.label :name, class: 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group field">
    <%= f.label :description, class: 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: 'form-control', rows: 10 %>
    </div>
  </div>

  <div class="form-group field">
    <%= f.label :image, class: 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.text_field :image, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group field">
    <%= f.label :proposed_date, class: 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.date_field :proposed_date, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group field">
    <%= f.label :tour, class: 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.number_field :tour, in: 0..4, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group field">
    <%= f.label :currency_code, class: 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.select :currency_code,
          options_for_select(Hash[*Money::Currency.all.collect{ |money| [money.name, money.iso_code] }.flatten], @area.currency_code),
          class: 'form-control'
      %>
    </div>
  </div>

  <div class="form-group actions">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: 'btn btn-default' %>
    </div>
  </div>

<% end %>

