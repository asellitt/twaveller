<h1>Listing attractions</h1>

<table>
  <thead>
    <tr>
      <th>Area</th>
      <th>Name</th>
      <th>Description</th>
      <th>Cost</th>
      <th>Image</th>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attractions.each do |attraction| %>
      <tr>
        <td><%= attraction.area %></td>
        <td><%= attraction.name %></td>
        <td><%= attraction.description %></td>
        <td><%= attraction.cost %></td>
        <td><%= attraction.image %></td>
        <td><%= attraction.link %></td>
        <td><%= link_to 'Show', trip_area_attraction+path(@trip, @area, attraction) %></td>
        <td><%= link_to 'Edit', edit_trip_area_attraction_path(@trip, @area, attraction) %></td>
        <td><%= link_to 'Destroy', [@trip, @area, attraction], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Attraction', new_trip_area_attraction_path(@trip, @area) %>
