<%= form_for([@trip, @trip_right], html: { class: 'form-horizontal' } ) do |f| %>
  <% if @trip_right.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@trip_right.errors.count, "error") %> prohibited this trip_right from being saved:</h2>

      <ul>
      <% @form.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group field">
    <%= f.label :user_id, class: 'control-label col-sm-2' %>
