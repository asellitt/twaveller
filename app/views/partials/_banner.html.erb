<% if banner.viewable? %>
  <div class="row">
    <% if banner.editable? %>
      <%= link_to banner.edit_path, class: banner.controls_visibility_class do %>
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
      <% end %>
    <% end %>
    <%= link_to banner.view_path, class: 'jumbo' do %>
      <div class="col-md-12 jumbotron" data-background="<%= banner.banner_image %>">
        <div class="container">
          <div class="jumbotron-heading">
            <h1><%= banner.name %></h1>
            <p>(<%= banner.start_date %> - <%= banner.end_date %>)</p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
