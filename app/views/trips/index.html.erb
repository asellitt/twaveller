<%= content_for :actions do %>
  <li><%= link_to 'New Trip', new_trip_path %></li>
<% end %>

<div class="container-fluid">

  <div class="row">
    <h1>Listing trips</h1>
  </div>

  <% @trips.each do |trip| %>
    <div class="row">
      <% if trip.editable? %>
        <%= link_to trip.edit_path do %>
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
        <% end %>
      <% end %>
      <%= link_to trip.view_path, class: 'jumbo' do %>
        <div class="col-md-12 jumbotron" data-background="<%= trip.banner_image %>">
          <div class="container">
            <div class="jumbotron-heading">
              <h1><%= trip.name %></h1>
              <p>(<%= trip.start_date %> - <%= trip.end_date %>)</p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
