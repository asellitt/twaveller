<%= form_for(@trip, html: { class: 'form-horizontal' } ) do |f| %>
  <% if @trip.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@trip.errors.count, "error") %> prohibited this trip from being saved:</h2>

      <ul>
      <% @trip.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group field">
    <%= f.label :name, class: 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group field">
    <%= f.label :banner_image, class: 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.text_field :banner_image, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group field">
    <%= f.label :map, class: 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.text_field :map, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group field">
    <%= f.label :start_date, class: 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.date_field :start_date, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group field">
    <%= f.label :end_date, class: 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.date_field :end_date, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group field">
    <%= f.label :currency_code, class: 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.select :currency_code,
          options_for_select(Hash[*Money::Currency.all.collect{ |money| [money.name, money.iso_code] }.flatten], @trip.currency_code),
          class: 'form-control'
      %>
    </div>
  </div>

  <div class="form-group actions">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: 'btn btn-default' %>
    </div>
  </div>

<% end %>
