<h1>Listing days</h1>

<table>
  <thead>
    <tr>
      <th>Trip</th>
      <th>Name</th>
      <th>Description</th>
      <th>Cost</th>
      <th>Image</th>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @days.each do |day| %>
      <tr>
        <td><%= day.trip %></td>
        <td><%= day.name %></td>
        <td><%= day.description %></td>
        <td><%= day.cost %></td>
        <td><%= day.image %></td>
        <td><%= day.link %></td>
        <td><%= link_to 'Show', trip_day_path(@trip, day) %></td>
        <td><%= link_to 'Edit', edit_trip_day_path(@trip, day) %></td>
        <td><%= link_to 'Destroy', [@trip, day], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Day', new_trip_day_path(@trip) %>
